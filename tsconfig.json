{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "types": ["node", "react-native", "styled-components-react-native"],
    "baseUrl": "./",
    "paths": {
      "@core/navigations": ["src/@core/navigations"],
      "@core/hooks": ["src/@core/hooks"],
      "@core/helpers": ["src/@core/helpers"],
      "@core/theme": ["src/@core/theme"],
      "@scenes/*": ["src/scenes/*"],
      "@components": ["src/components"],
      "@services": ["src/services"],
      "@stores": ["src/stores"],
      "@lib/*": ["src/lib/*"],
      "@types": ["src/types"],
      "@constants": ["src/constants"]
    }
  }
}
